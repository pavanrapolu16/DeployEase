# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/deployease

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Domain Configuration (for subdomain routing)
BASE_DOMAIN=sthara.fun

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Google OAuth
# Get these from https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
# Get these from https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth Redirect URLs
OAUTH_SUCCESS_REDIRECT=http://localhost:5173/auth/success
OAUTH_FAILURE_REDIRECT=http://localhost:5173/auth/error
